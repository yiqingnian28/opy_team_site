/**index.wxss**/

.back-ground image {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.1;
  z-index: -1;
}

.opy-logo {
  width: 250rpx;
  height: 250rpx;
  border-radius: 100rpx;
}

.top {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 300rpx;
  align-items: stretch;
  background: rgb(30, 25, 25);
}

.bottom {
  display: flex;
  flex-direction: column;
  padding: 15rpx 0rpx;
  width: 95%;
}

.top view {
  margin: 20rpx;
}

.opy-slogan {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.opy-slogan text {
  display: block;
}

.opy-slogan .title {
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  font-size: 16pt;
  color: rgb(248, 239, 63);
}

.opy-slogan .content {
  font-size: 13pt;
  color: #fff;
}

.content-item {
  padding: 16rpx 20rpx;
  margin: 20rpx;
  border: solid 1px #b2b2b2;
  border-radius: 8rpx;
}

.content-item swiper {
  height: 200rpx;
}

.content-item .type {
  font-size: 14pt;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content-item .title {
  font-size: 12pt;
  margin-bottom: 10rpx;
}

.content-item .content {
  font-size: 10pt;
  height: 100rpx;
  color: #b2b2b2;
}

.content-item .content{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.article-content {
  display: flex;
  flex-direction: row;
  justify-content : space-between;
}

.article-content .title,
.article-content .content {
  word-wrap: break-word;
}

.article-content .left {
  width: 60%;
}

.content-item image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 5rpx;
}